<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:background="#E1B9B9"    android:gravity="center">    <ImageView        android:layout_margin="20dp"        android:layout_width="120dp"        android:layout_height="120dp"        android:layout_gravity="center"        android:src="@drawable/welcome_logo"/>    <EditText        android:id="@+id/name_singUp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:autofillHints="USER NAME"        android:hint="@string/Name"        android:inputType="textEmailAddress"        android:padding="20dp"        android:textColor="#B81923"        android:textColorHint="#0C0A0A"        android:layout_margin="20dp"/>    <EditText        android:id="@+id/email_singUp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:autofillHints="USER NAME"        android:hint="@string/Email"        android:inputType="textEmailAddress"        android:padding="20dp"        android:textColor="#B81923"        android:textColorHint="#0C0A0A"        android:layout_margin="20dp"/>    <EditText        android:id="@+id/password_singUp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:autofillHints="USER NAME"        android:hint="@string/Password"        android:inputType="textPassword"        android:padding="20dp"        android:textColor="#070707"        android:textColorHint="#0E0D0D"        android:layout_margin="20dp"/>    <Button        android:id="@+id/SingUp_btn"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:text="@string/SingUp"        android:textSize="25sp"        android:layout_margin="10dp"        android:padding="10dp"/>    <TextView        android:id="@+id/txtView_singUp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        android:padding="10dp"        android:text="Already Have an Account ? Login"        android:textColor="#0B0A0B"        android:textSize="20sp"        android:textStyle="italic|bold"        android:gravity="center"        />    <ProgressBar        android:id="@+id/progressBar_singUp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:visibility="gone"/></LinearLayout>