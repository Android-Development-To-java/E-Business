<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:layout_margin="10dp"    app:cardCornerRadius="10dp"    app:cardElevation="@dimen/cardview_compat_inset_shadow">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical">        <ImageView            android:id="@+id/image_view_sample"            android:layout_width="match_parent"            android:layout_height="180dp"            android:layout_gravity="center"            android:scaleType="centerCrop" />        <TextView            android:id="@+id/pro_name_sample"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center"            android:padding="5dp"            android:text="item Name"            android:textSize="18sp"            android:textStyle="italic"            />        <TextView            android:id="@+id/pro_prc_sample"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center"            android:padding="5dp"            android:text="price:-"            android:textColor="#FF9800"            android:textSize="14sp"            android:textStyle="italic" />        <TextView            android:id="@+id/pro_d_sample"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center"            android:textColor="#FF9800"            android:textSize="20sp"            android:textStyle="bold" />    </LinearLayout></androidx.cardview.widget.CardView>