<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".utility.ui.LoginActivity"    android:orientation="vertical"    android:gravity="center"    android:background="#E6C0C0">    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:orientation="vertical"        android:gravity="center"        android:layout_margin="20dp">        <ImageView            android:id="@+id/image_login"            android:layout_margin="20dp"            android:layout_width="120dp"            android:layout_height="120dp"            android:src="@drawable/wellcome_logo"/>    </LinearLayout>    <LinearLayout        android:gravity="center"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_margin="20dp"        android:orientation="vertical">        <EditText            android:id="@+id/email_Login"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:textSize="30sp"            android:text="Email :-"            android:fontFamily="@font/aladin"            android:padding="10dp"            android:layout_margin="20dp"/>        <EditText            android:id="@+id/password_Login"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:textSize="30sp"            android:text="Password :-"            android:fontFamily="@font/aladin"            android:layout_margin="20dp"            android:padding="10dp"/>        <Button            android:id="@+id/loing_btn"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:text="LOOING"            android:fontFamily="@font/aladin"            android:textSize="25sp"            android:layout_margin="10dp"            android:padding="10dp"/>        <TextView            android:id="@+id/txt_sign_up"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="10dp"            android:text="you_have_no_account_sign_up"            android:textColor="#0B0A0B"            android:textSize="20sp"            android:textStyle="italic|bold"            android:layout_gravity="center"            android:fontFamily="@font/aladin"/>    </LinearLayout></LinearLayout>